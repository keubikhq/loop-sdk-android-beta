<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:topLeftRadius="10dp" android:topRightRadius="0dp"
                android:bottomLeftRadius="10dp" android:bottomRightRadius="0dp"/>
            <solid android:color="@color/bg_gray" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:topLeftRadius="10dp" android:topRightRadius="0dp"
                    android:bottomLeftRadius="10dp" android:bottomRightRadius="0dp"/>
                <gradient
                    android:endColor="@color/brand_color_airbnb_full_opacity"
                    android:startColor="@color/brand_color_airbnb_full_opacity"
                    />
            </shape>
        </clip>
    </item>

