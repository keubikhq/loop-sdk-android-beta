<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="42dp"
                android:left="42dp"
                android:right="42dp"
                android:top="42dp" />
            <size
                android:width="42dp"
                android:height="42dp" />
            <stroke
                android:width="42dp"
                android:color="#33EF6351" />
        </shape>
    </item>
    <!-- Green circle in middle -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="30dp"

                android:color="#EF6351" />
        </shape>
    </item>
    <!-- Smaller red circle at front -->
    <item android:id="@+id/innerCircle">
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="#80EF6351"
                android:width="28dp"
                />
            <solid android:color="#ffffff"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>
</layer-list>